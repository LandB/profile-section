mixin portoflioItem(item)
  .portfolio--item
    .portfolio--overlay
    img(src="assets/images/#{item}")
    
mixin personComment(avatar, name, title, msg)
  .msg-wrapper
    .person
      .avatar(style="background-image: url(assets/images/#{avatar}.png)")
      .person-info
        .name #{name}
        .title #{title}
    .person-msg
      p #{msg}

section#profile
